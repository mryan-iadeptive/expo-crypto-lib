{
  "name": "expo-crypto-lib",
  "version": "1.0.2",
  "description": "Hybrid RSA + AES encryption library with mnemonic-based key derivation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "jest --runInBand",
    "ci": "npm run typecheck && npm run lint -- --max-warnings 0 && npm run test && npm run build",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "expo-module.config.json",
    "README.md",
    "GETTING_STARTED.md",
    "PUBLISHING.md",
    "LICENSE"
  ],
  "keywords": [
    "expo",
    "react-native",
    "typescript",
    "javascript",
    "node-js",
    "expo-module",
    "crypto",
    "cryptography",
    "ios",
    "android",
    "rsa",
    "aes",
    "encryption",
    "mnemonic",
    "bip39",
    "key-derivation",
    "security",
    "web-crypto",
    "seed-phrase",
    "cross-platform",
    "hybrid-encryption"
  ],
  "author": "expo-crypto-lib contributors",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mryan-iadeptive/expo-crypto-lib.git"
  },
  "homepage": "https://github.com/mryan-iadeptive/expo-crypto-lib#readme",
  "bugs": {
    "url": "https://github.com/mryan-iadeptive/expo-crypto-lib/issues"
  },
  "dependencies": {
    "base64-arraybuffer": "^1.0.2",
    "node-forge": "^1.3.3"
  },
  "peerDependencies": {
    "expo": "*",
    "expo-crypto": "*",
    "expo-secure-store": "*",
    "react-native": "*",
    "react-native-modpow": "*"
  },
  "peerDependenciesMeta": {
    "expo": { "optional": true },
    "expo-crypto": { "optional": true },
    "expo-secure-store": { "optional": true },
    "react-native": { "optional": true },
    "react-native-modpow": { "optional": true }
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/node-forge": "^1.3.14",
    "expo-modules-core": "^3.0.0",
    "expo-module-scripts": "^5.0.0",
    "typescript": "~5.9.2"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./react-native": {
      "types": "./dist/react-native.d.ts",
      "default": "./dist/react-native.js"
    }
  }
}
